<% include partials/header %>

<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h1>Welcome to Yelpcamp</h1>
        <p>View our hand-picked campgrounds from al over the world!</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
        </p>
    </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our popular campgrounds</h3>
        </div>
        <% campgrounds.forEach((campground)=>{ %>
            <div class="border col-md-3 col-sm-6 figure p-1">
                <img class="figure-img img-fluid" src="<%=campground.image %>" width="100%">
                <div >
                    <div class="figure-caption mx-auto">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary mx-auto">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>    
    </div>
</div>

<% include partials/footer %>
